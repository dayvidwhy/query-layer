{
    "compilerOptions": {
      "rootDirs": ["server", "db"],
      "outDir": "dist",
      "lib": ["es2020"],
      "target": "es2020",
      "module": "esnext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "types": ["node"],
      "strictNullChecks": true,
      "baseUrl": "./",
      "paths": {
        "@server/*": ["server/*"],
        "@db/*": ["db/*"]
      }
    }
  }